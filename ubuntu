#!/bin/bash
#Ubuntu
sudo apt-get update
sudo apt-get upgrade
sudo apt-get -y install linux-firmware-nonfree compizconfig-settings-manager unity-tweak-tool

#Video cards - Nvidea
sudo apt-get -y install nvidia-current

#App armor
#sudo invoke-rc.d apparmor kill
#sudo update-rc.d -f apparmor remove

#System utils
sudo apt-get -y install htop zip unzip sysstat screen xfsprogs mdadm numactl

#Java
sudo add-apt-repository ppa:webupd8team/java
sudo apt-get update
sudo apt-get -y install oracle-java8-installer

#Apps
sudo apt-get -y install meld

sudo apt-get -f install && sudo apt-get autoremove && sudo apt-get -y autoclean && sudo apt-get -y clean

